{
"manifest_version": 2,
"name": "MBTA StopWatch",
"version": "0.0.1",
"description": "Get realtime information on the MBTA.",
"permissions": [
    "contextMenus",
    "tabs"
],
"background": {
    "scripts": ["js/background.js"]
},
"browser_action" : {
    "default_icon" : "public/icon-small.png"
},
"icons": {
    "16": "public/icon-small.png",
    "32": "public/icon-small.png",
    "48": "public/icon-small.png",
    "128":"public/icon-small.png"
   }
}
